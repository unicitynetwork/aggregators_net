{
  "name": "aggregators_net",
  "version": "2.0.0",
  "description": "This repository contains the API definition and JavaScript implementations for communication between the Agent and Aggregation layers on the Unicity blockchain platform.",
  "main": "./src/AggregatorGateway.ts",
  "scripts": {
    "build": "tsc --noEmit",
    "docker:mongo": "docker compose -f src/database/mongo/docker/docker-compose.yml up -d",
    "docker:mongo:down": "docker compose -f src/database/mongo/docker/docker-compose.yml down -v",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "test": "jest tests/",
    "test:ci": "jest tests/ --ci --reporters=default",
    "test:mongo": "tsx tests/AggregatorRecordStorage.test.ts && tsx src/database/mongo/tests/SmtStorage.test.ts",
    "test:mongo:replica": "tsx tests/MongoReplicaSet.test.ts"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unicitynetwork/aggregators_net.git"
  },
  "license": "ISC",
  "dependencies": {
    "@alphabill/alphabill-js-sdk": "1.0.0-rc1-rc.a0a1660",
    "@types/node": "22.13.10",
    "@unicitylabs/commons": "https://github.com/unicitynetwork/shared#typescript",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "mongodb": "6.15.0",
    "mongoose": "8.12.1"
  },
  "devDependencies": {
    "@eslint/js": "9.22.0",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.1",
    "@types/jest": "29.5.14",
    "eslint": "9.22.0",
    "eslint-config-prettier": "10.1.1",
    "@testcontainers/mongodb": "10.21.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.3",
    "jest": "29.7.0",
    "globals": "16.0.0",
    "babel-jest": "^29.7.0",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "typescript-eslint": "8.27.0"
  }
}
